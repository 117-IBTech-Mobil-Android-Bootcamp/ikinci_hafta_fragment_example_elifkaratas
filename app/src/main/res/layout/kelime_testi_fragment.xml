<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:background="@color/background_color"
    android:id="@+id/kelime_testi_fragment"

    <TextView
        android:id="@+id/textView1"
        android:layout_width="303dp"
        android:layout_height="66dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Kelime Testi, Sizin dil seviyenizi ölçmek içindir. Test sonunda doğru ve yanlışlarınızı görebileceksiniz!"
        android:textAlignment="center"
        android:textColorHint="@color/kelime_testi_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="174dp"
        android:layout_height="32dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="sans-serif"
        android:lineHeight="32dp"
        android:text="Kelime Testi"
        android:textAlignment="center"
        android:textColor="@color/kelime_testi_color"
        android:textColorHint="@color/kelime_testi_color"
        android:textFontWeight="700"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

    <ImageView
        android:id="@+id/kelime_testi_buton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/ic_rectangle_11" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:text="Şimdi Başla"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/kelime_testi_buton"
        app:layout_constraintEnd_toEndOf="@+id/kelime_testi_buton"
        app:layout_constraintStart_toStartOf="@+id/kelime_testi_buton"
        app:layout_constraintTop_toTopOf="@+id/kelime_testi_buton" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/kelime_testi_buton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kelime_testi_buton"
        app:srcCompat="@drawable/ic_rightarrow" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="337dp"
        android:layout_height="389dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/screen_shot_2021_09_11_at_20_28_37" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="100dp"
        android:text="Atla"
        android:textAlignment="center"
        android:textColor="@color/kelime_testi_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>